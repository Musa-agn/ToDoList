@model string
@{
    Layout = null;
    var todayDate = DateTime.Now.ToString("yyyy-MM-ddT00:00");
}
<div class="col-lg-4" v-if="updateToDoEnable">
    <h2>Update To Do</h2>
    <form>
        <div class="form-group">
            <label>Id</label>
            <input type="text" v-model="updateToDoInput.id" class="form-control" disabled>
        </div>
        <div class="form-group">
            <label>Name</label>
            <input type="text" v-model="updateToDoInput.name" class="form-control" placeholder="Name">
        </div>
        <div class="form-group">
            <label>Description</label>
            <input type="text" v-model="updateToDoInput.description" class="form-control" placeholder="Description">
        </div>
        <div class="form-group">
            <label>Time To Do</label>
            <input type="datetime-local" min="@todayDate" v-model="updateToDoInput.timeToDo">
        </div>
        <button type="button" @@click="updateToDo" class="btn btn-primary">Update</button>
    </form>
</div>
