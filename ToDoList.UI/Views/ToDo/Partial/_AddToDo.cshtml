
@{
    Layout = null;
    var todayDate = DateTime.Now.ToString("yyyy-MM-ddT00:00");
}

<div class="col-lg-6" style="background-color:aliceblue">
    <h2>Add To Do</h2>
    <form>
        <div class="form-group">
            <label>Name</label>
            <input type="text" v-model="toDoInput.name" class="form-control" placeholder="Name">
        </div>
        <div class="form-group">
            <label>Description</label>
            <input type="text" v-model="toDoInput.description" class="form-control" placeholder="Description">
        </div>
        <div class="form-group">
            <label>Time To Do</label>
            <input type="datetime-local" min="@todayDate" v-model="toDoInput.timeToDo">
        </div>
        <button type="button" @@click="addToDo" class="btn btn-primary">Add</button>
    </form>
</div>